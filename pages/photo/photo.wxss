.loginbt{padding: 10rpx 20rpx;background: #EC635D;color: #ffffff;font-size: 32rpx;font-weight: bold;text-align: center;display: inline-block;letter-spacing: 2px;border-radius: 4px;}
.loginsus,.phone{width: 80%;position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%);background: #ffffff;border-radius: 10px;padding-bottom: 40rpx;z-index: 9}
.botimg{position: fixed;bottom: 0;left: 0;width: 100%}
/* .bot{background: rgba(0,0,0,0.4);position: absolute;width: 100%;} */
.loginone,.getphone{text-align: center;color: #666666;font-size: 36rpx;letter-spacing: 1px;height: 90rpx;line-height: 90rpx; border-bottom: 1rpx solid #ccc;}
.logintwo{font-size: 32rpx;color: #666666;text-align: center;margin-top: 30rpx;}
.loginthree{font-size: 32rpx;color: #666666;text-align: center;}
.bottom{width: 200rpx;border-radius: 50rpx;font-size: 28rpx;height: 70rpx;line-height: 70rpx;display: inline-block;vertical-align: middle;margin: 0 40rpx;}
.placeclass{font-size: 30rpx;}
.phone{z-index: 7}
.phoneimg{width: 38rpx;}
.phoneson{margin: 30rpx 30rpx 10rpx;background: #eee;padding: 20rpx;border-radius: 4px;}
.phoneinp{width: 320rpx;}
.phonesons{margin-right: 20rpx;}
.sure{width: 220rpx;border-radius: 50rpx;letter-spacing: 2px;margin-top: 40rpx;background:#56BB37;color: #ffffff;height: 80rpx;line-height: 80rpx;}
.yzm{color: #55B836;font-size: 28rpx;border: 1rpx solid #eee;padding: 10rpx;margin: 30rpx 0 10rpx;border-radius: 4px;}
.empower{position: absolute;width: 100%;height: 100%;top: 0;left: 0;}
.bottom_picker{background:#1AAD19; color: white;text-align: center;} 
.bottompre{text-align: center;}